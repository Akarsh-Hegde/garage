{
    "name": "component-package",
    "version": "1.0.0",
    "description": "A component library for both Next.js and React Native",
    "main": "./nextjs-components/dist/index.js",
    "scripts": {
      "build": "npm run build:nextjs && npm run build:reactnative",
      "build:nextjs": "cd nextjs-components && rollup -c",
      "build:reactnative": "cd reactnative-components && rollup -c"
    },
    "workspaces": {
      "packages": ["nextjs-components", "reactnative-components"]
    },
    "exports": {
    "./nextjs-components": "./nextjs-components",
    "./reactnative-components": "./reactnative-components"
  },
    "dependencies": {},
    "devDependencies": {
      "rollup": "^3.0.0",
      "typescript": "^4.5.0",
      "inquirer": "^9.2.0"
    },
    "config": {
      "choice": ""
    },
    "postinstall": "node postinstall.js"
  }
  